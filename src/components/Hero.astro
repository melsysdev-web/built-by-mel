---
import { Image } from "astro:assets";
import profile from "../assets/profile1.png";
---

<section class="max-w-6xl mx-auto px-6 py-20 lg:py-32">
    <div class="flex flex-col items-center text-center space-y-8">
        <!-- Avatar -->
        <div class="relative group">
            <div
                class="absolute -inset-2 rounded-full
              bg-primary/40 blur-lg
              opacity-0 transition duration-300
              group-hover:opacity-100"
            >
            </div>
            <div
                class="relative size-28 rounded-full border-2 border-border-dark overflow-hidden bg-surface-dark bg-center bg-cover">
                <Image
                    src={profile}
                    alt="Professional headshot of a systems engineer"
                    width={400}
                    height={400}
                    class="w-full h-full object-cover"
                />
            </div>
        </div>

        <!-- Content -->
        <div class="max-w-3xl space-y-6">
            <h1
                class="text-4xl md:text-6xl font-bold tracking-tight text-primary font-display">
                Systems Engineer.
            </h1>

            <p
                class="text-xl md:text-2xl text-foreground font-light leading-relaxed">
                Architecting high-scale infrastructure and distributed systems
                with a focus on reliability, scalability, and performance
                optimization.
            </p>

            <!-- Buttons -->
            <div class="pt-4 flex flex-wrap justify-center gap-4">
                <a
                    class="px-8 py-3 rounded-lg bg-primary text-secondary-foreground font-bold shadow-glow hover:primary transition-all"
                    href="#contact">
                    Get in Touch
                </a>
                <a
                    class="px-8 py-3 rounded-lg border border-border text-primary font-medium hover:bg-surface/60 transition-colors"
                    href="#projects">
                    View Architecture
                </a>
            </div>
        </div>
    </div>
</section>
